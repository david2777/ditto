<?xml version="1.0"?>
<Container version="2">
  <Name>ditto</Name>
  <Repository>david2777/ditto</Repository>
  <Registry>https://hub.docker.com/repository/docker/david2777/ditto</Registry>
  <Network>bridge</Network>
  <Privileged>false</Privileged>
  <Support>https://github.com/david2777/ditto</Support>
  <Project>https://github.com/david2777/ditto</Project>
  <Overview>Ditto - A Notion-based quote service</Overview>
  <Category>Productivity:</Category>
  <WebUI>http://[IP]:[PORT:8000]</WebUI>
  <TemplateURL/>
<!--  <Icon></Icon>-->
  <ExtraParams/>
  <PostArgs/>
  <CPUset/>
  <DateInstalled/>
  <DonateText/>
  <DonateLink/>
  <Config Name="WebUI" Target="8000" Default="8000" Mode="tcp" Description="Web UI Port" Type="Port" Display="always" Required="true" Mask="false"/>
  <Config Name="NOTION_KEY" Target="NOTION_KEY" Default="" Mode="" Description="Notion API Key" Type="Variable" Display="always" Required="true" Mask="true"/>
  <Config Name="NOTION_DATABASE_ID" Target="NOTION_DATABASE_ID" Default="" Mode="" Description="Notion Database ID" Type="Variable" Display="always" Required="true" Mask="false"/>
  <Config Name="DATABASE_URL" Target="DATABASE_URL" Default="sqlite:///data/quotes.db" Mode="" Description="Database Connection URL or File Path" Type="Variable" Display="always" Required="false" Mask="false"/>
  <Config Name="AppData" Target="/app/data" Default="/mnt/user/appdata/ditto" Mode="rw" Description="App Data Path" Type="Path" Display="advanced" Required="true" Mask="false"/>
</Container>
